{
  "name": "iw-base",
  "version": "0.0.1",
  "description": "iw base package",
  "author": "Benjamin Schmitz",
  "license": "GPL-3.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/Vortex375/iw.git"
  },
  "scripts": {
    "start": "npm run build && npm run watch",
    "build": "npm run build-ts && npm run tslint && npm run copy-static-assets",
    "watch": "concurrently -k -p \"[{name}]\" -n \"TypeScript,Node\" -c \"yellow.bold,cyan.bold,green.bold\" \"npm run watch-ts\"",
    "build-ts": "tsc",
    "watch-ts": "tsc -w",
    "tslint": "tslint -c tslint.json -p tsconfig.json",
    "copy-static-assets": "node copyStaticAssets.js"
  },
  "dependencies": {
    "async": "^2.5.0",
    "bunyan": "^1.8.12",
    "colors": "^1.1.2",
    "deepstream.io": "^3.1.0",
    "deepstream.io-client-js": "^2.3.0",
    "deepstream.io-storage-mongodb": "^1.1.0",
    "escape-string-regexp": "^1.0.5",
    "lodash": "^4.17.4",
    "minimist": "^1.2.0",
    "mongodb": "^2.2.33",
    "uws": "^8.14.1"
  },
  "devDependencies": {
    "@types/async": "^2.0.44",
    "@types/bson": "^1.0.4",
    "@types/bunyan": "1.8.3",
    "@types/colors": "^1.1.3",
    "@types/lodash": "^4.14.77",
    "@types/minimist": "^1.2.0",
    "@types/mongodb": "^2.2.13",
    "@types/node": "^8.0.44",
    "@types/uws": "^0.13.0",
    "concurrently": "^3.5.0",
    "shelljs": "^0.7.7",
    "tslint": "^5.7.0",
    "typescript": "^2.5.3"
  },
  "optionalDependencies": {
    "utf-8-validate": "^3.0.3"
  }
}
