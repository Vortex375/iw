  "license": "GPL-3.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/Vortex375/iw.git"
  },
  "scripts": {
    "start": "npm run build && npm run watch",
    "build": "npm run build-ts && npm run tslint && npm run copy-static-assets",
    "watch": "concurrently -k -p \"[{name}]\" -n \"TypeScript,Node\" -c \"yellow.bold,cyan.bold,green.bold\" \"npm run watch-ts\"",
    "build-ts": "tsc",
    "watch-ts": "tsc -w",
    "tslint": "tslint -c tslint.json -p tsconfig.json",
    "copy-static-assets": "node copyStaticAssets.js"
  },
  "dependencies": {
    "async": "^2.5.0",
    "bunyan": "^1.8.12",
    "colors": "^1.1.2",
    "deepstream.io": "^3.1.0",
    "deepstream.io-cache-redis": "^1.2.0",
    "deepstream.io-client-js": "^2.3.0",
    "escape-string-regexp": "^1.0.5",
    "lodash": "^4.17.4",
    "minimist": "^1.2.0",
    "ws": "^6.1.2"
  },
  "devDependencies": {
    "@types/async": "^2.0.44",
    "@types/bson": "^1.0.4",
    "@types/bunyan": "1.8.5",
    "@types/colors": "^1.1.3",
    "@types/lodash": "^4.14.77",
    "@types/minimist": "^1.2.0",
    "@types/mongodb": "^3.1.17",
    "@types/node": "^10.12.15",
    "@types/ws": "^6.0.1",
    "concurrently": "^4.1.0",
    "shelljs": "^0.8.3",
    "tslint": "^5.7.0",
    "typescript": "^3.1.6"
  },
  "optionalDependencies": {
    "bufferutil": "^4.0.0",
    "utf-8-validate": "^5.0.1"
  }
}
